{
  "name": "jobhonter",
  "version": "1.0.0",
  "description": "AI-powered job application automation platform - bypassing traditional job boards",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel run dev",
    "build": "pnpm --parallel run build",
    "lint": "pnpm --parallel run lint",
    "test": "pnpm --parallel run test",
    "clean": "pnpm --parallel run clean && rm -rf node_modules",
    "type-check": "pnpm --parallel run type-check",
    "prepare": "husky"
  },
  "keywords": [
    "job-search",
    "automation",
    "ai",
    "recruiting",
    "job-application",
    "monorepo"
  ],
  "author": "JobHonter Team",
  "license": "MIT",
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.16.0",
    "eslint-config-next": "^15.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
